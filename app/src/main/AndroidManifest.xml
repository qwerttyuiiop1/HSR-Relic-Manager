<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PROJECTION" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />
    <uses-permission android:name="android.permission.PROJECT_MEDIA" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HSRRelicManager"
        tools:targetApi="31">

<!--        <activity-->
<!--            android:name=".ui.bubble.PermissionLauncher"-->
<!--            android:exported="true"-->
<!--            android:launchMode="singleTop" />-->
            <activity
                android:name=".ui.MainActivity"
                android:exported="true"
                android:launchMode="singleTop" />

        <service
            android:name=".ui.bubble.HSRBubbleService"
            android:enabled="true"
            android:exported="false"
            android:canPerformGestures="true"
            android:foregroundServiceType="specialUse"
            android:configChanges="orientation|screenSize|keyboardHidden|locale"/>

        <!--            android:name=".ui.MainActivity"-->
        <activity
            android:name=".ui.bubble.PermissionLauncher"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.RuleHeaderFragment"/>
        <activity android:name=".ui.InventoryBodyFragment"/>

        <service
            android:name=".HSRAutoClickService"
            android:exported="false"
            android:foregroundServiceType="mediaProjection"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/metadata" />
        </service>
    </application>

</manifest>