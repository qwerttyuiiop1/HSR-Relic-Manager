<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1A000000"
    android:padding="40dp">
    <!-- 1A000000 -->
    <!-- test background: #161828 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="16dp">

            <com.google.android.flexbox.FlexboxLayout
                app:justifyContent="space_around"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    app:cardCornerRadius="14dp">

                    <ImageView
                        android:id="@+id/btn_relic_lock"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_lock" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    app:cardCornerRadius="14dp">

                    <ImageView
                        android:id="@+id/btn_relic_upgrade"
                        android:padding="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/enhance" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    app:cardCornerRadius="14dp">

                    <ImageView
                        android:id="@+id/btn_relic_trash"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_trash" />
                </androidx.cardview.widget.CardView>
            </com.google.android.flexbox.FlexboxLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:cardCornerRadius="25dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/img_relic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_5_star_relic"
                        android:src="@drawable/musketeer_of_wild_wheat"
                        android:padding="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        app:cardCornerRadius="14dp"
                        app:strokeWidth="2dp"
                        app:strokeColor="#CCFFFFFF"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp">
                        <ImageView
                            android:id="@+id/img_relic_equipped"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_relic_equipped"
                            android:scaleType="centerCrop" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/lbl_relic_level"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="+12 → +15"
                        android:textAlignment="center"
                        android:background="#66000000"
                        android:textColor="#FFFFFF"
                        android:padding="5dp"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/lbl_relic_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Musketeer of Wild Wheat"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#33FFFFFF"
                android:layout_marginBottom="2dp"
                android:gravity="center_vertical">
                <View
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:background="@color/gold"/>
                <ImageView
                    android:id="@+id/img_relic_main_stat"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_substat_atk"
                    app:tint="@color/lightGold"/>
                <TextView
                    android:id="@+id/lbl_relic_main_stat_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="ATK"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:textColor="@color/gold" />
                <TextView
                    android:id="@+id/lbl_relic_main_stat_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+20%"
                    android:textSize="20dp"
                    android:layout_marginEnd="6dp"
                    android:textColor="@color/gold" />
            </LinearLayout>
            <!-- HEHE -->
            <!-- What are loops? -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/relic_substat_container_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/img_relic_substat_1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_substat_atk"
                        app:tint="@color/white" />
                    <TextView
                        android:id="@+id/lbl_relic_substat_type_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="HP"
                        android:textSize="16dp"
                        android:layout_weight="1"
                        android:textColor="@color/white" />
                    <TextView
                        android:id="@+id/lbl_relic_substat_value_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+20%"
                        android:textSize="16dp"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/relic_substat_container_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/img_relic_substat_2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_substat_atk"
                        app:tint="@color/white"/>
                    <TextView
                        android:id="@+id/lbl_relic_substat_type_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="DEF"
                        android:textSize="16dp"
                        android:layout_weight="1"
                        android:textColor="@color/white" />
                    <TextView
                        android:id="@+id/lbl_relic_substat_value_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+15%"
                        android:textSize="16dp"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/relic_substat_container_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/img_relic_substat_3"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_substat_atk"
                        app:tint="@color/white"/>
                    <TextView
                        android:id="@+id/lbl_relic_substat_type_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Crit Rate"
                        android:textSize="16dp"
                        android:layout_weight="1"
                        android:textColor="@color/white" />
                    <TextView
                        android:id="@+id/lbl_relic_substat_value_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+12%"
                        android:textSize="16dp"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/relic_substat_container_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/img_relic_substat_4"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_substat_atk"
                        app:tint="@color/white"/>
                    <TextView
                        android:id="@+id/lbl_relic_substat_type_4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Crit DMG"
                        android:textSize="16dp"
                        android:layout_weight="1"
                        android:textColor="@color/white" />
                    <TextView
                        android:id="@+id/lbl_relic_substat_value_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+25%"
                        android:textSize="16dp"
                        android:textColor="@color/white" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp">
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="15"/>
        <View
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_weight="70"
            android:background="#33D9D9D9"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="15"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:text="2 Piece: Increases Lightning DMG by 10%.\n4 Piece: When the wearer uses their Skill, Increases the wearer’s ATK by 20% for 1 turn(s)."/>
</LinearLayout>