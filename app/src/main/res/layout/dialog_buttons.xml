<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/right_corner_rounded_rect"
    android:orientation="vertical"
    android:padding="0dp">

    <!-- header -->
    <LinearLayout
        android:id="@+id/dialog_button_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="20dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp">

        <!-- Title , close -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:fontFamily="@font/pf_din_text_pro_regular"
                android:letterSpacing="0.03"
                android:text="Action"
                android:textColor="#4A4A4A"
                android:textSize="32sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:id="@+id/divider_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="4dp"
            android:background="#BCBEC1" />
    </LinearLayout>

    <!-- body -->
    <LinearLayout
        android:id="@+id/dialog_button_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:orientation="vertical">

        <!-- Enhance Action Group -->
        <LinearLayout
            android:id="@+id/enhance_action_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rule_add_rectangle_button"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <ImageView
                android:id="@+id/radio_button_enhance"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="10dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_radio_button_unchecked" />

            <ImageView
                android:id="@+id/enhance_action_group_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/enhance" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/pf_din_text_pro_regular"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="Enhance"
                android:textColor="#4A4A4A"
                android:textSize="24sp" />
        </LinearLayout>

        <!-- Repeat similar structure for Lock, Reset, Filter, and Trash -->
        <!-- Lock Action Group -->
        <LinearLayout
            android:id="@+id/lock_action_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rule_add_rectangle_button"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <ImageView
                android:id="@+id/radio_button_lock"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="10dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_radio_button_unchecked" />

            <ImageView
                android:id="@+id/lock_action_group_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/lock" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/pf_din_text_pro_regular"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="Lock"
                android:textColor="#4A4A4A"
                android:textSize="24sp" />
        </LinearLayout>

        <!-- Repeat for Reset, Filter, and Trash -->
        <!-- Reset Action Group -->
        <LinearLayout
            android:id="@+id/reset_action_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rule_add_rectangle_button"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <ImageView
                android:id="@+id/radio_button_reset"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="10dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_radio_button_unchecked" />

            <ImageView
                android:id="@+id/reset_action_group_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/reset" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/pf_din_text_pro_regular"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="Reset"
                android:textColor="#4A4A4A"
                android:textSize="24sp" />
        </LinearLayout>

        <!-- Filter Action Group -->
        <LinearLayout
            android:id="@+id/filter_action_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rule_add_rectangle_button"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <ImageView
                android:id="@+id/radio_button_filter"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="10dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_radio_button_unchecked" />

            <ImageView
                android:id="@+id/filter_action_group_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/filter_group" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/pf_din_text_pro_regular"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="Filter Group"
                android:textColor="#4A4A4A"
                android:textSize="24sp" />
        </LinearLayout>

        <!-- Trash Action Group -->
        <LinearLayout
            android:id="@+id/trash_action_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rule_add_rectangle_button"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <ImageView
                android:id="@+id/radio_button_trash"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="10dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_radio_button_unchecked" />

            <ImageView
                android:id="@+id/trash_action_group_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_trash" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/pf_din_text_pro_regular"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="Trash"
                android:textColor="#4A4A4A"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- footer -->
    <LinearLayout
        android:id="@+id/dialog_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/bottom_image"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:cropToPadding="true"
                android:scaleType="centerCrop"
                android:src="@drawable/dialog_button_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/cancel_action_group_dialog_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/spinner_bg"
                    android:paddingStart="20dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/cancel_image"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_cancel" />

                        <TextView
                            android:id="@+id/cancel_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Cancel"
                            android:textColor="#4A4A4A" />
                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/confirm_action_group_dialog_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/spinner_bg"
                    android:paddingStart="20dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/confirm_image"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_confirm" />

                        <TextView
                            android:id="@+id/confirm_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Confirm"
                            android:textColor="#4A4A4A" />
                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>
