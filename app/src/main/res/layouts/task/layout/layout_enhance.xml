<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="1080px"
    android:layout_width="2400px"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/autobattle_reference"
    tools:ignore="PxUsage">
    <!-- use your own background image -->

    <TextView
        android:id="@+id/lbl_level"
        android:layout_width="100px"
        android:layout_height="55px"
        android:layout_marginEnd="520px"
        android:layout_marginTop="124px"
        android:background="@drawable/border_red"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/lbl_auto_add"
        android:layout_width="190px"
        android:layout_height="34px"
        android:layout_marginEnd="150px"
        android:layout_marginTop="568px"
        android:text="auto,add"
        android:background="@drawable/border_red"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/lbl_enhance_btn"
        android:layout_width="250px"
        android:layout_height="56px"
        android:layout_marginBottom="54px"
        android:layout_marginEnd="250px"
        android:text="enhance"
        android:background="@drawable/border_red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/click_anywhere"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.333"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="50px"
        android:background="@drawable/border_red" />

    <Button
        android:id="@+id/btn_exit"
        android:layout_width="62px"
        android:layout_height="62px"
        android:layout_marginEnd="125px"
        android:layout_marginTop="26px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/border_red" />

</androidx.constraintlayout.widget.ConstraintLayout>