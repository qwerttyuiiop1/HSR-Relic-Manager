<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="1080px"
    android:layout_width="2400px"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/inventory_reference"
    tools:ignore="PxUsage">
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/grid_layout"
        android:background="@drawable/border_red"
        android:layout_width="1341px"
        android:layout_height="0px"

        android:layout_marginBottom="165px"
        android:layout_marginTop="222px"
        android:layout_marginStart="312px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:flexDirection="row"
        app:justifyContent="flex_start"

        app:flexWrap="wrap"
        app:dividerDrawableHorizontal="@drawable/inventory_item_row_divider"
        app:dividerDrawableVertical="@drawable/inventory_item_col_divider"
        app:showDividerHorizontal="middle"
        app:showDividerVertical="middle">

        <FrameLayout
            android:layout_width="144px"
            android:layout_height="168px"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_red"
                />
            <TextView
                android:layout_width="70px"
                android:layout_height="30px"
                android:layout_marginBottom="3px"
                android:layout_gravity="bottom|center_horizontal"
                android:background="@drawable/border_red"
                />
        </FrameLayout>
        <Button
            android:layout_width="144px"
            android:layout_height="168px"
            android:background="#00000000"
            />
        <Button
            android:layout_width="144px"
            android:layout_height="168px"
            android:background="#00000000"
            />
        <Button
            android:layout_width="144px"
            android:layout_height="168px"
            android:background="#00000000"
            />
        <Button
            android:layout_width="144px"
            android:layout_height="168px"
            android:background="#00000000"
            />
        <Button
            android:layout_width="144px"
            android:layout_height="168px"
            android:background="#00000000"
            />
        <Button
            android:layout_width="144px"
            android:layout_height="168px"
            android:background="#00000000"
            />
        <Button
            android:layout_width="144px"
            android:layout_height="168px"
            android:background="#00000000"
            />
        <Button
            android:layout_width="144px"
            android:layout_height="168px"
            android:background="#00000000"
            />
        <Button
            android:layout_width="144px"
            android:layout_height="168px"
            android:background="#00000000"
            />

        <FrameLayout
            android:layout_width="144px"
            android:layout_height="168px"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_red"
                />
            <TextView
                android:layout_width="70px"
                android:layout_height="30px"
                android:layout_marginBottom="3px"
                android:layout_gravity="bottom|center_horizontal"
                android:background="@drawable/border_red"
                />
        </FrameLayout>
    </com.google.android.flexbox.FlexboxLayout>


    <Button
        android:id="@+id/scroll_bar"
        android:layout_width="6px"
        android:layout_height="0px"
        android:background="@drawable/border_red"
        app:layout_constraintTop_toTopOf="@id/grid_layout"
        app:layout_constraintBottom_toBottomOf="@id/grid_layout"
        app:layout_constraintStart_toEndOf="@id/grid_layout" />

    <TextView
        android:id="@+id/num_relics"
        android:layout_width="200px"
        android:layout_height="50px"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="75dp"
        android:background="@drawable/border_red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/relic_detail_container"
        android:layout_width="552px"
        android:layout_height="0dp"

        android:layout_marginStart="57px"
        android:layout_marginTop="110px"
        android:layout_marginBottom="187px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/scroll_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/lbl_relic_name"
            android:layout_width="match_parent"
            android:layout_height="69px"
            android:layout_marginBottom="37px"
            android:background="@drawable/border_red"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:id="@+id/relic_info_container"
            android:layout_height="204px"
            android:layout_marginBottom="48px">

            <TextView
                android:id="@+id/lbl_level"
                android:layout_width="111px"
                android:layout_height="50px"
                android:layout_marginBottom="10px"
                android:background="@drawable/border_red"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/lbl_type"
                android:layout_width="225px"
                android:layout_height="35px"
                android:background="@drawable/border_red"
                app:layout_constraintBottom_toTopOf="@id/lbl_level"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/ic_trash"
                android:layout_width="36px"
                android:layout_height="36px"
                android:layout_marginEnd="20px"
                android:layout_marginBottom="21px"
                android:background="@drawable/border_red"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/ic_lock"
                android:layout_width="36px"
                android:layout_height="36px"
                android:layout_marginEnd="20px"
                android:layout_marginBottom="30px"
                android:background="@drawable/border_red"
                app:layout_constraintBottom_toTopOf="@id/ic_trash"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48px"
            android:layout_marginBottom="6px">
            <View android:id="@+id/ic_main_stat"
                android:layout_width="50px"
                android:layout_height="match_parent"
                android:background="@drawable/border_red"/>
            <TextView
                android:id="@+id/lbl_main_stat"
                android:layout_width="270px"
                android:layout_height="match_parent"
                android:background="@drawable/border_red"/>
            <TextView
                android:id="@+id/lbl_main_stat_value"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginStart="50px"
                android:background="@drawable/border_red"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48px">
            <View android:id="@+id/ic_sub_stat1"
                android:layout_width="50px"
                android:layout_height="match_parent"
                android:background="@drawable/border_red"/>
            <TextView
                android:id="@+id/lbl_sub_stat1"
                android:layout_width="270px"
                android:layout_height="match_parent"
                android:background="@drawable/border_red"/>
            <TextView
                android:id="@+id/lbl_sub_stat1_value"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginStart="50px"
                android:background="@drawable/border_red"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48px">
            <View android:id="@+id/ic_sub_stat2"
                android:layout_width="50px"
                android:layout_height="match_parent"
                android:background="@drawable/border_red"/>
            <TextView
                android:id="@+id/lbl_sub_stat2"
                android:layout_width="270px"
                android:layout_height="match_parent"
                android:background="@drawable/border_red"/>
            <TextView
                android:id="@+id/lbl_sub_stat2_value"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginStart="50px"
                android:background="@drawable/border_red"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48px">
            <View android:id="@+id/ic_sub_stat3"
                android:layout_width="50px"
                android:layout_height="match_parent"
                android:background="@drawable/border_red"/>
            <TextView
                android:id="@+id/lbl_sub_stat3"
                android:layout_width="270px"
                android:layout_height="match_parent"
                android:background="@drawable/border_red"/>
            <TextView
                android:id="@+id/lbl_sub_stat3_value"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginStart="50px"
                android:background="@drawable/border_red"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48px">
            <View android:id="@+id/ic_sub_stat4"
                android:layout_width="50px"
                android:layout_height="match_parent"
                android:background="@drawable/border_red"/>
            <TextView
                android:id="@+id/lbl_sub_stat4"
                android:layout_width="270px"
                android:layout_height="match_parent"
                android:background="@drawable/border_red"/>
            <TextView
                android:id="@+id/lbl_sub_stat4_value"
                android:layout_width="0px"
                android:layout_marginStart="50px"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/border_red"/>
        </LinearLayout>
        <View
            android:layout_width="0px"
            android:layout_height="0px"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/lbl_relic_equipped"
            android:layout_width="300px"
            android:layout_height="30px"
            android:text="equipped"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/border_red"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="72px"
        app:layout_constraintStart_toStartOf="@id/relic_detail_container"
        app:layout_constraintEnd_toEndOf="@id/relic_detail_container"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="57px"
        >
        <View
            android:layout_width="0px"
            android:layout_height="0px"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_red"
            android:layout_marginStart="100px"
            android:layout_marginEnd="50px"
            android:text="enhance"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="414px"
        android:layout_height="60px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/border_red"
        android:layout_marginStart="393px"
        android:layout_marginBottom="55px">
        <TextView
            android:id="@+id/sortLabel"
            android:layout_width="200px"
            android:layout_height="match_parent"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>